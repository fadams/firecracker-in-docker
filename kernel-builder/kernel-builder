# Create a directory on the host that we can mount as a
# "home directory" in the container for the current user.
mkdir -p $(id -un)

docker run --rm -it \
    -u $(id -u):$(id -g) \
    -v $PWD/$(id -un):/tmp/src \
    firecracker-kernel-builder $@

# Copy kernel to the kernel directory used by the launcher images
cp $PWD/$(id -un)/linux/vmlinux ../launcher/kernel/vmlinux

